<UserControl x:Class="CallOfCthulhu.CharacterManager.Controls.FormTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CallOfCthulhu.CharacterManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="Root">
    <DockPanel>
        <Label DockPanel.Dock="Top"
               Content="{Binding ElementName=Root, Path=LabelText}"
               Margin="5,5,5,0"/>
        <TextBox DockPanel.Dock="Top"
                 Text="{Binding ElementName=Root, Path=TextBoxText}"
                 Margin="5,0,5,5"/>
    </DockPanel>
</UserControl>
